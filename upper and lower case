def string_test (s):
    x = {"UPPER_CASE":0, "LOWER_CASE":0}
    for c in s:
        if c .isupper():
            x["UPPER_CASE"]+=1
        elif c .islower():
            x["LOWER_CASE"]+=1
        else:
            pass

    print ("Number of Lowercase letters:", x["LOWER_CASE"])
    print ("Number of Uppercase letters:", x["UPPER_CASE"])
    

string_test('The quick Brown Fox')
string_test('I am a Python Programmer')
string_test('Python is fun')
